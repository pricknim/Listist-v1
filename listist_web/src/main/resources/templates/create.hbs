<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="basic_stylesheet.css">
    <link rel="stylesheet" type="text/css" href="menu.css">
    <link rel="stylesheet" type="text/css" href="containers.css">
    <title>Create Playlist</title>
</head>
<style>
    .myButton {
        float: right;
        margin-top: 0;
    }

</style>
<body>
<div class="menu">
    <button class="menuButton">
        <a href="myplaylists"><img src="images/listist123.png"></a>
    </button>
    <div class="user" onclick="logout()">
        <img src="images/logout.png" width="60" height="50" align="right">
    </div>
    <ul>
        <li>
            <a href="myplaylists">My Playlists</a>
        </li>
        <li>
            <a href="createplaylist">Create</a>
        </li>
        <li>
            <a href="songs">Browse Songs</a>
        </li>
    </ul>
</div>

<div class="content" id="content">
    <button class="myButton" onclick="createPlaylist()">Create</button>
    <input type="text" name="title" id="title" minlength="1" placeholder="Enter playlist title">
    <div class="errorMessage" id="error"></div>
    <br>
    <hr>
    {{#each song}}
        <label for="{{@index}}check">
            <div class="song_container" id={{@index}} onclick="">
                <div class="song_name" id="s_title">{{this/title}}</div><div class="song_name"> - </div><div class="song_name" id="s_artist">{{this/artist}}</div>
                <span class="checkbox_poz"><input type="checkbox" id="{{@index}}check"></span>
                <br>
            </div>
        </label>
    {{else}}
        <div class="song_container">
            <p>There are no songs registered.</p>
        </div>
    {{/each}}
</div>
</body>
<script src="playlistSend.js"></script>
<script src="logout.js"></script>
</html>